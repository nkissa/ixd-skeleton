<html>
<head>
	<title>HCI Project Portfolio</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<script src="js/script.js" type="text/javascript"></script>
	{{> facebook}}
	<script src="/js/facebook.js"></script>
</head>

<body>
	<!--HEADER-->
	<header>
		<div id="app_title">
			<h1>P91</h1>
		</div>
	</header>
	<!--TIMER -->
	<div class="container">
		<div id="timer">

			<div id = "time_display">
				00:00:00
			</div>

			<div class="buttons">
				<button id="startStop" onclick="startStop()">Start</button>
				<button id="reset" onclick="reset()">Reset</button>

			</div>
		</div>
	</div>


	<!--Question Container-->
	<div class="myexercises">
		<div class="interval_container">
			<label id="input_timer">Interval per Minute(1-10):</label>
			<br>
			<input type="number" id="input" onclick="clear()" min="1" max="10">
	    	<button id="input_btn" onclick="intervalTime()">Submit</button>
	    	<h1 id="textChange">Your Minute Interval is:</h1>
	    </div>
	    <span id="myspan1">0</span>

	    <div class="exercises_contain">
			<label id="exer_title">How many exercises are you doing(Choose 1-6)</label>
			<br>
			<input type="number" id="exer_input" onclick="clear()" min="1" max="6">
	       <button id="exer_btn" onclick="exerciseCount()">Submit</button>
	       <h1>Your total exercises are: </h1>
	    </div>
	    <span id="myspan2">0</span>
	</div>

		








	<div class="home-btn">
		<ul>
			{{#each nav_title}}
				{{#each Nav}}
				<button id="app_btn"><a href="{{path}}">{{name}}</a></button>
				{{/each}}
			{{/each}}
		</ul>
		<fb:login-button scope="public_profile,email" onlogin="checkLoginState();" id="fb">
		</fb:login-button>
	</div>








